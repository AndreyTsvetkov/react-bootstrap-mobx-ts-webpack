{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "forceConsistentCasingInFileNames": true,
        "target": "ES5",
        "jsx": "react",
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "require.d.ts"
    ]
}